{
  "type": "page",
  "title": "消息模板列表",
  "body": [
    {
      "type": "crud",
      "api": "/messageTemplate/list?page=${page}&perPage=${perPage}&name=${nameSearch}&templateType=${templateTypeSearch}&sendChannel=${sendChannelSearch}&msgType=${msgTypeSearch}",
      "bodyClassName": "panel-default",
      "syncLocation": false,
      "name": "sample",
      "footerToolbar": [
        "switch-per-page",
        "pagination"
      ],
      "filter": {
        "type": "group",
        "title": "检索条件",
        "submitText": "",
        "gap": "lg",
        "body": [
          {
            "type": "input-text",
            "name": "nameSearch",
            "label": "模板名",
            "borderMode": "half",
            "clearable": true,
            "placeholder": "模糊检索",
            "size": "md"
          },
          {
            "type": "select",
            "name": "templateTypeSearch",
            "label": "模板类型",
            "options": [
              {
                "label": "---",
                "value": ""
              },
              {
                "label": "定时",
                "value": "10"
              },
              {
                "label": "实时",
                "value": "20"
              }
            ],
            "size": "sm"
          },
          {
            "type": "select",
            "name": "sendChannelSearch",
            "label": "发送渠道",
            "options": [
              {
                "label": "---",
                "value": ""
              },
              {
                "label": "PUSH通知栏",
                "value": "20"
              },
              {
                "label": "短信",
                "value": "30"
              },
              {
                "label": "邮箱",
                "value": "40"
              },
              {
                "label": "微信服务号（模板消息）",
                "value": "50"
              },
              {
                "label": "微信小程序（订阅消息）",
                "value": "60"
              },
              {
                "label": "企业微信（应用消息）",
                "value": "70"
              },
              {
                "label": "钉钉群机器人",
                "value": "80"
              },
              {
                "label": "钉钉工作消息",
                "value": "90"
              },
              {
                "label": "企业微信（机器人）",
                "value": "100"
              },
              {
                "label": "飞书机器人",
                "value": "110"
              }
            ],
            "size": "md"
          },
          {
            "type": "select",
            "name": "msgTypeSearch",
            "label": "消息类型",
            "options": [
              {
                "label": "---",
                "value": ""
              },
              {
                "label": "通知类",
                "value": "10"
              },
              {
                "label": "营销类",
                "value": "20"
              },
              {
                "label": "验证码",
                "value": "30"
              }
            ],
            "size": "sm"
          },
          {
            "label": "",
            "type": "submit",
            "level": "light",
            "icon": "https://suda.cdn.bcebos.com/images%2F2021-01%2Fsearch.svg"
          },
          {
            "label": "重置",
            "type": "reset",
            "level": "warning"
          }
        ]
      },
      "bulkActions": [
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "delete:/messageTemplate/delete/$ids",
          "confirmText": "您确定进行批量删除操作吗?"
        }
      ],
      "columns": [
        {
          "name": "id",
          "label": "ID",
          "width": 20
        },
        {
          "name": "name",
          "label": "模板名"
        },
        {
          "name": "templateType",
          "label": "模板类型",
          "type": "mapping",
          "map": {
            "10": "定时",
            "20": "实时"
          }
        },
        {
          "name": "sendChannel",
          "label": "发送渠道",
          "type": "mapping",
          "map": {
            "20": "PUSH通知栏",
            "30": "短信",
            "40": "邮箱",
            "50": "微信服务号（模板消息）",
            "60": "微信小程序（订阅消息）",
            "70": "企业微信（应用消息）",
            "80": "钉钉群机器人",
            "90": "钉钉工作消息",
            "100": "企业微信（机器人）",
            "110": "飞书机器人"
          }
        },
        {
          "name": "msgType",
          "label": "消息类型",
          "type": "mapping",
          "map": {
            "10": "通知类",
            "20": "营销类",
            "30": "验证码"
          }
        },
        {
          "name": "idType",
          "label": "接收者ID类型",
          "type": "mapping",
          "map": {
            "10": "用户ID",
            "20": "设备号",
            "30": "手机号",
            "40": "openId",
            "50": "邮箱地址",
            "60": "企业微信userId",
            "70": "钉钉userId",
            "80": "推送通知栏cid",
            "90": "飞书userId"
          }
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "tiled": true,
              "buttons": [
                {
                  "type": "button",
                  "label": "测试",
                  "level": "primary",
                  "initApi": "post:/messageTemplate/query/$id",
                  "actionType": "dialog",
                  "dialog": {
                    "title": "测试一条消息",
                    "body": {
                      "type": "form",
                      "api": {
                        "url": "/messageTemplate/test",
                        "method": "post",
                        "requestAdaptor": "api.data.msgContent = JSON.stringify(api.data.testParam[0])\nreturn api;",
                        "data": {
                          "id": "${id}",
                          "receiver": "${receiver}",
                          "testParam": "${testParam}",
                          "creator": "${ls:phone}"
                        }
                      },
                      "body": [
                        {
                          "type": "input-text",
                          "name": "receiver",
                          "label": "接收者",
                          "required": true,
                          "description": "<font color=\"#990000\">该模板存在占位符，请点击【新增】并填入文案后进行测试下发！</font>"
                        },
                        {
                          "type": "service",
                          "schemaApi": "/messageTemplate/test/content?id=${id}"
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "查看",
                  "level": "primary",
                  "actionType": "link",
                  "link": "/crud/${id}"
                },
                {
                  "type": "button",
                  "label": "修改",
                  "level": "info",
                  "actionType": "link",
                  "link": "/crud/${id}/edit"
                },
                {
                  "type": "button",
                  "label": "启动",
                  "level": "success",
                  "actionType": "ajax",
                  "confirmText": "您确认要启动吗?",
                  "api": "post:/messageTemplate/start/$id",
                  "visibleOn": "this.templateType==10 && this.msgStatus!=30"
                },
                {
                  "type": "button",
                  "label": "停止",
                  "level": "success",
                  "actionType": "ajax",
                  "confirmText": "您确认要暂停吗?",
                  "api": "post:/messageTemplate/stop/$id",
                  "visibleOn": "this.templateType==10 && this.msgStatus==30"
                },
                {
                  "type": "button",
                  "label": "复制",
                  "level": "warning",
                  "actionType": "ajax",
                  "confirmText": "您确认要复制吗?",
                  "api": "post:/messageTemplate/copy/$id"
                },
                {
                  "type": "button",
                  "label": "撤回",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要撤回吗?",
                  "api": "post:/messageTemplate/recall/$id"
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除吗?",
                  "api": "delete:/messageTemplate/delete/$id"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0
    }
  ],
  "toolbar": [
    {
      "type": "button",
      "actionType": "link",
      "link": "/crud/new",
      "label": "新增",
      "icon": "fa fa-plus",
      "primary": true
    }
  ],
  "remark": null,
  "name": "page-demo"
}